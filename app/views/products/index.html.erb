<div class="container" ng-app="inventory">
    <div class="row">
        <div class="jumbotron">
            <div class="page-header">
                <h2 class="text-center">Inventory</h2>
            </div>
        </div>
    </div>
    <div class="products" ng-controller="products_controller">
        <div class="row">
            <h3>Total Value:{{total_cost()}}$</h3>
            <input type="text" class="form-control" placeholder="Filter on ..." ng-model="filter_on"/>
        </div>
        <div class="row">
            <table class="table table-stripped">
                <thead>
                    <tr>
                        <th>a-z</th>
                        <th>Name</th>
                        <th>Cost</th>
                        <th>Quantity</th>
                        <th>Orgin</th>       
                        <th>Notes</th>
                        <th>.</th>
                        <th>.</th>                        
                    </tr>                                         
                </thead>
                <tbody>
                    <tr ng-repeat="product in products | filter: filter_on">
                        <td>.</td>
                        <td>{{product.name}}</td>
                        <td>{{product.cost}}$</td>
                        <td><input type="text" class="form-control"  ng-model="product.quantity"/></td>
                        <td>{{product.orgin}}</td>
                        <td><input type="text" class="form-control" value="{{product.note}}" ng-model="product.note"/></td>
                        <td><input type="button" class="form-control btn btn-success" ng-click="btn_update_product_click(product)" value="Update"></td>                                                                                                                                                   
                        <td><input type="button" class="form-control btn btn-danger" ng-click="btn_delete_product_click(product)" value="Delete"></td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <th>a-z</th>
                        <th>Name</th>
                        <th>Cost</th>
                        <th>Quantity</th>
                        <th>Orgin</th>       
                        <th>Notes</th>
                        <th>.</th>
                        <th>.</th>                        
                    </tr>                                         
                </tfoot>
            </table>
        </div>
        <div class="row">
            <div class="col-lg-2">
                <input type="text" class="form-control" placeholder="Prodct Name" ng-model="product_name">
            </div>
            <div class="col-lg-2">
                <input type="text" class="form-control" placeholder="Cost" ng-model="product_cost">
            </div>
            <div class="col-lg-2">
                <input type="text" class="form-control" placeholder="Quantity" ng-model="product_quantity">
            </div>
            <div class="col-lg-2">
                <input type="text" class="form-control" placeholder="Orgin" ng-model="product_orgin">
            </div>
            <div class="col-lg-2">
                <input type="text" class="form-control" placeholder="Note" ng-model="product_note">
            </div>
            <div class="col-lg-2">
                <input ng-click="btn_add_product_click()" type="buttton" class="form-control btn btn-success" value="Add"/>
            </div>
        </div>
    </div>
</div>